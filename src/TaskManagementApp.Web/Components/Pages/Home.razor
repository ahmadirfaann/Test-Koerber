@page "/"
@inject IMediator Mediator
@inject IJSRuntime JSRuntime

<PageTitle>Task Management App - Modern & Clean</PageTitle>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-3 text-center mb-2 page-header">Task Management</h1>
            <p class="text-center text-muted mb-5">Organize your tasks with style and efficiency</p>

            <div class="modern-card mb-5">
                <div class="modern-card-header">
                    <div class="d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="16"></line>
                            <line x1="8" y1="12" x2="16" y2="12"></line>
                        </svg>
                        Create New Task
                    </div>
                </div>
                <div class="card-body p-4">
                    <EditForm Model="newTask" OnValidSubmit="HandleCreateTask">
                        <DataAnnotationsValidator />
                        <div class="row g-4">
                            <div class="col-md-5">
                                <label class="form-label fw-semibold mb-2">Title <span class="text-danger">*</span></label>
                                <InputText @bind-Value="newTask.Title" class="form-control form-control-modern" placeholder="Enter task title" />
                                <ValidationMessage For="@(() => newTask.Title)" class="validation-message" />
                            </div>
                            <div class="col-md-5">
                                <label class="form-label fw-semibold mb-2">Description</label>
                                <InputText @bind-Value="newTask.Description" class="form-control form-control-modern" placeholder="Add a description (optional)" />
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-gradient-primary w-100" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    }
                                    else
                                    {
                                        <span>+ Add</span>
                                    }
                                </button>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="modern-card text-center p-3">
                        <h3 class="text-gradient-primary mb-0">@totalTasks</h3>
                        <small class="text-muted">Total Tasks</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="modern-card text-center p-3">
                        <h3 class="mb-0" style="color: #11998e;">@completedTasks</h3>
                        <small class="text-muted">Completed</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="modern-card text-center p-3">
                        <h3 class="mb-0" style="color: #f5576c;">@pendingTasks</h3>
                        <small class="text-muted">Pending</small>
                    </div>
                </div>
            </div>

            <div class="filter-group">
                <button type="button" class="filter-btn @(currentFilter == TaskFilter.All ? "active" : "")" @onclick="() => SetFilter(TaskFilter.All)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                        <line x1="8" y1="6" x2="21" y2="6"></line>
                        <line x1="8" y1="12" x2="21" y2="12"></line>
                        <line x1="8" y1="18" x2="21" y2="18"></line>
                        <line x1="3" y1="6" x2="3.01" y2="6"></line>
                        <line x1="3" y1="12" x2="3.01" y2="12"></line>
                        <line x1="3" y1="18" x2="3.01" y2="18"></line>
                    </svg>
                    All Tasks (@totalTasks)
                </button>
                <button type="button" class="filter-btn @(currentFilter == TaskFilter.Pending ? "active" : "")" @onclick="() => SetFilter(TaskFilter.Pending)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    Pending (@pendingTasks)
                </button>
                <button type="button" class="filter-btn @(currentFilter == TaskFilter.Completed ? "active" : "")" @onclick="() => SetFilter(TaskFilter.Completed)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                    Completed (@completedTasks)
                </button>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-modern mx-auto"></div>
                    <p class="text-muted mt-3">Loading your tasks...</p>
                </div>
            }
            else if (tasks == null || !tasks.Any())
            {
                <div class="empty-state">
                    <div class="empty-state-icon">üìù</div>
                    <h4 class="text-muted mb-2">No tasks found</h4>
                    <p class="text-muted">Create your first task above to get started!</p>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var task in tasks)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="task-card shadow-modern @(task.IsCompleted ? "completed" : "")">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="mb-0 @(task.IsCompleted ? "text-decoration-line-through text-muted" : "fw-bold")">
                                        @task.Title
                                    </h5>
                                    <span class="badge badge-modern @(task.IsCompleted ? "badge-completed" : "badge-pending")">
                                        @(task.IsCompleted ? "‚úì Done" : "‚è± Pending")
                                    </span>
                                </div>

                                @if (!string.IsNullOrEmpty(task.Description))
                                {
                                    <p class="text-muted mb-3" style="font-size: 0.9rem;">@task.Description</p>
                                }

                                <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                    <small class="text-muted">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                            <line x1="16" y1="2" x2="16" y2="6"></line>
                                            <line x1="8" y1="2" x2="8" y2="6"></line>
                                            <line x1="3" y1="10" x2="21" y2="10"></line>
                                        </svg>
                                        @task.CreatedAt.ToString("MMM dd, yyyy")
                                    </small>
                                    <div class="d-flex gap-2">
                                        <button type="button"
                                                class="btn btn-sm @(task.IsCompleted ? "btn-outline-warning" : "btn-gradient-success")"
                                                @onclick="() => ToggleTaskCompletion(task.Id)"
                                                @onclick:stopPropagation="true"
                                                @onclick:preventDefault="true"
                                                title="@(task.IsCompleted ? "Mark as Pending" : "Mark as Complete")">
                                            @if (task.IsCompleted)
                                            {
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <polyline points="1 4 1 10 7 10"></polyline>
                                                    <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
                                                </svg>
                                            }
                                            else
                                            {
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <polyline points="20 6 9 17 4 12"></polyline>
                                                </svg>
                                            }
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-gradient-danger"
                                                @onclick="() => DeleteTask(task.Id)"
                                                @onclick:stopPropagation="true"
                                                @onclick:preventDefault="true"
                                                title="Delete Task">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<TaskDto>? tasks;
    private List<TaskDto>? allTasks;
    private CreateTaskDto newTask = new();
    private TaskFilter currentFilter = TaskFilter.All;
    private bool isLoading = true;
    private bool isSubmitting = false;

    private int totalTasks => allTasks?.Count ?? 0;
    private int completedTasks => allTasks?.Count(t => t.IsCompleted) ?? 0;
    private int pendingTasks => allTasks?.Count(t => !t.IsCompleted) ?? 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadAllTasksForStats();
        await LoadTasks();
    }

    private async Task LoadAllTasksForStats()
    {
        try
        {
            allTasks = await Mediator.Send(new GetTasksQuery { Filter = TaskFilter.All });
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
        }
    }

    private async Task LoadTasks()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            tasks = await Mediator.Send(new GetTasksQuery { Filter = currentFilter });
            await LoadAllTasksForStats();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading tasks: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleCreateTask()
    {
        try
        {
            isSubmitting = true;
            StateHasChanged();

            var result = await Mediator.Send(new CreateTaskCommand
            {
                Title = newTask.Title,
                Description = newTask.Description
            });

            if (result.IsSuccess)
            {
                newTask = new CreateTaskDto();
                await LoadTasks();
                await JSRuntime.InvokeVoidAsync("showToast", "Task created successfully!", "success");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error: {result.Error}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error creating task: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private async Task ToggleTaskCompletion(int taskId)
    {
        try
        {
            var result = await Mediator.Send(new ToggleTaskCompletionCommand { Id = taskId });
            if (result.IsSuccess)
            {
                await LoadTasks();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error: {result.Error}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating task: {ex.Message}");
        }
    }

    private async Task DeleteTask(int taskId)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this task?");
            if (confirmed)
            {
                var result = await Mediator.Send(new DeleteTaskCommand { Id = taskId });
                if (result.IsSuccess)
                {
                    await LoadTasks();
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", $"Error: {result.Error}");
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error deleting task: {ex.Message}");
        }
    }

    private async Task SetFilter(TaskFilter filter)
    {
        if (currentFilter != filter)
        {
            currentFilter = filter;
            await LoadTasks();
        }
    }
}
